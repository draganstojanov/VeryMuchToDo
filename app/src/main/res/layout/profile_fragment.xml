<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.andraganoid.verymuchtodo.ktodo.profile.ProfileViewModel" />

        <variable
            name="fragment"
            type="com.andraganoid.verymuchtodo.ktodo.profile.ProfileFragment" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgorundColor"
            tools:context=".main.register.RegisterFragment">


            <TextView
                android:id="@+id/profileFragmentTitleTv"
                style="@style/TitleText"
                android:layout_marginTop="64dp"
                android:text="@string/my_profile"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/profileUserImageIv"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:onClick="@{v->viewModel.editButtonClicked(v)}"
                android:src="@mipmap/ic_launcher_round"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileFragmentTitleTv" />

            <ImageView
                android:id="@+id/profileImgEdit"
                android:layout_width="@dimen/bar_height"
                android:layout_height="@dimen/bar_height"
                android:layout_marginEnd="@dimen/loginMargin"
                android:background="@drawable/button_background"
                android:onClick="@{v->viewModel.editButtonClicked(v)}"
                android:scaleType="center"
                android:src="@drawable/ic_edit"
                android:tint="@color/primDark"
                app:layout_constraintBottom_toBottomOf="@id/profileUserImageIv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profileUserImageIv" />


            <EditText
                android:id="@+id/profileNameEt"
                style="@style/AuthEditText"
                android:layout_width="0dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="0dp"
                android:hint="@string/your_name"
                android:imeOptions="actionNext"
                android:inputType="text"
                app:layout_constraintEnd_toStartOf="@id/profileNameEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileUserImageIv"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/profileNameEdit"
                android:layout_width="@dimen/bar_height"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/loginMargin"
                android:background="@drawable/button_background"
                android:onClick="@{v->viewModel.editButtonClicked(v)}"
                android:scaleType="center"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@id/profileNameEt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profileNameEt" />

            <EditText
                android:id="@+id/profileMailEt"
                style="@style/AuthEditText"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="0dp"
                android:hint="@string/your_email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"
                app:layout_constraintEnd_toStartOf="@id/profileMailEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileNameEt"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/profileMailEdit"
                android:layout_width="@dimen/bar_height"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/loginMargin"
                android:background="@drawable/button_background"
                android:onClick="@{v->viewModel.editButtonClicked(v)}"
                android:scaleType="center"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@id/profileMailEt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profileMailEt" />

            <EditText
                android:id="@+id/profilePassEt"
                style="@style/AuthEditText"
                android:layout_width="0dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="0dp"
                android:hint="@string/your_pass"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                app:layout_constraintEnd_toStartOf="@id/profilePassEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/profileMailEt"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/profilePassEdit"
                android:layout_width="@dimen/bar_height"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/loginMargin"
                android:background="@drawable/button_background"
                android:onClick="@{v->viewModel.editButtonClicked(v)}"
                android:scaleType="center"
                android:src="@drawable/ic_edit"
                app:layout_constraintBottom_toBottomOf="@id/profilePassEt"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profilePassEt" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>