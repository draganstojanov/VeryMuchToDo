<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="message"
            type="com.andraganoid.verymuchtodo.kmodel.Message" />

        <!--        <variable-->
        <!--            name="isMyMsg"-->
        <!--            type="Boolean" />-->
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/msgProfileImg"
            profileImage="@{message.from.imageUrl}"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="4dp"
            android:visibility="@{message.isMyMsg?View.INVISIBLE:View.VISIBLE}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/textContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:minHeight="@dimen/bar_height"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/msgProfileImg"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/messageSender"
                senderAndDate="@{message}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingBottom="4dp"
                android:textColor="@color/primDark"
                android:textSize="14sp"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <TextView-->
            <!--                android:id="@+id/messageText"-->
            <!--                messageText="@{message}"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:padding="8dp"-->
            <!--                android:gravity="end"-->
            <!--                android:textColor="@color/backgorundColor"-->
            <!--                android:textSize="16sp"-->
            <!--                app:layout_constraintTop_toBottomOf="@id/messageSender"-->
            <!--                tools:ignore="MissingConstraints" />-->

            <TextView
                android:id="@+id/messageTextOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:padding="8dp"
                android:text="@{message.text}"
                android:textColor="@color/backgorundColor"
                android:textSize="16sp"
                android:visibility="@{message.isMyMsg?View.GONE:View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/messageSender" />

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:padding="8dp"
                android:text="@{message.text}"
                android:textColor="@color/backgorundColor"
                android:textSize="16sp"
                android:visibility="@{message.isMyMsg?View.VISIBLE:View.GONE}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/messageSender" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>