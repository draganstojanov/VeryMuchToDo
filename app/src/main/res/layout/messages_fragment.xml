<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.andraganoid.verymuchtodo.ktodo.chat.ChatsViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:tool="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/messagesRecView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toTopOf="@id/composeContainer"
            app:layout_constraintTop_toTopOf="parent"
            tool:listitem="@layout/message_item" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/composeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent">

            <EditText
                android:id="@+id/messageInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:hint="@string/your_message"
                android:maxLength="200"
                android:minHeight="@dimen/bar_height"
                android:padding="8dp"
                android:text="@={viewModel.messageText}"
                android:textColor="@color/backgroundColor"
                android:textColorHint="@color/primVeryLite"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/composeSend"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/composeSend"
                android:layout_width="@dimen/bar_height"
                android:layout_height="@dimen/bar_height"
                android:background="@drawable/button_background"
                android:onClick="@{()->viewModel.sendMessage()}"
                android:scaleType="center"
                android:src="@drawable/ic_send"
                app:tint="@color/primDark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>