<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="16dp">

    <TextView
        android:id="@+id/messageDialogItemText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/primVeryLite"
        android:textSize="16sp"
        android:paddingHorizontal="18dp"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/messageDialogSpace"
        android:layout_width="32dp"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
      app:layout_constraintTop_toBottomOf="@id/messageDialogItemText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/primVeryLite"
     />


</androidx.constraintlayout.widget.ConstraintLayout>


